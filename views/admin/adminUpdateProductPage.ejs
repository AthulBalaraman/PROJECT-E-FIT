<section class="home-section" style="height: 100vh">
  <div class="container" style="background: #fff; padding: 1.5rem">
    <form action="/admin/updateProductDetails" method="POST" enctype="multipart/form-data">

      <div class="row">
        <div>
          <input type="text" name="id" id="id" value="<%= product._id %>" style="display:none">
        </div>
        <div class="input-group mb-3 w-50">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >PRODUCT NAME</span
          >
          <input
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            name="productName"
            id="productName"
            value="<%= product.productName %>"
            
          />
        </div>
        <div class="input-group mb-3 w-25">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >ACTUAL PRICE</span
          >
          <input
            type="number"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            name="actualPrice"
            id="actualPrice"
            value="<%= product.actualPrice %>"
          />
        </div>
        <div class="input-group mb-3 w-25">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >SELLING PRICE</span
          >
          <input
            type="number"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            name="sellingPrice"
            id="sellingPrice"
            value="<%= product.sellingPrice %>"
          />
        </div>
      </div>
      <div class="row">
        <div class="input-group mb-3 w-50">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >SELECT CATEGORY</span
          >
          <select class="form-select" aria-label="Default select example" name="categoryName">
            <option selected><%= product.categoryName %></option>
            <% for(var i=0;i<categoriesDetails.length; i++) { %>
            <option value="<%= categoriesDetails[i].newCategoryName %>"><%= categoriesDetails[i].newCategoryName %></option>
            <% } %>
          </select>
        </div>
        <div class="input-group mb-3 w-50">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >SELECT BRAND</span
          >
          <select class="form-select" aria-label="Default select example" name="brandName">
            <option selected><%= product.brandName %></option>
            <% for(var i=0; i<brandDetails.length; i++){ %>
            <option value="<%= brandDetails[i].newBrandName %>"><%= brandDetails[i].newBrandName %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="input-group mb-3 w-25">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >ADD WEIGHT</span
          >
          <input
            type="number"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            name="weight"
            id="weight"
            value="<%= product.weight %>"
          />
        </div>
        <div class="input-group mb-3 w-25">
          <span
            class="input-group-text bg-dark text-white"
            id="inputGroup-sizing-default"
            >QUANTITY</span
          >
          <input
            type="number"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            name="productQuantity"
            id="productQuantity"
            value="<%= product.productQuantity %>"
          />
        </div>
      </div>
      <div class="row">
        <div class="input-group mb-3 w-50">
          <div class="input-group">
            <span class="input-group-text bg-dark text-white"
              >UPDATE PRODUCT DESCRIPTION</span
            >
            <textarea class="form-control" aria-label="With textarea" name="productDescription"><%= product.productDescription %></textarea>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="input-group w-50">
          <input type="file"  name="productImage" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" required>

        </div>
        <div class="form-check w-25 ms-5">
          <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="addToTrending">
          <label class="form-check-label text-dark " for="flexCheckDefault">
            ADD TO TRENDING LIST
          </label><br><br>
          <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="addToNewlyArrived">
          <label class="form-check-label text-dark " for="flexCheckDefault">
            ADD TO NEWLY ARRIVED
          </label><br><br>
        </div>
      </div>
      <div class="row">
      <div class="d-flex justify-content-center mt-5">
        <input type="submit" value="UPDATE PRODUCT" class="btn btn-success m-2 ">
        <input type="reset" value="RESET DETAILS" class="btn btn-secondary m-2 ">
      </div>
      </div>

    </form>
  </div>
</section>
