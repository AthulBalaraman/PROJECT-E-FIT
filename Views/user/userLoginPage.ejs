<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="px-5 ms-xl-4">
          
          <span class="h1 fw-bold mb-0 m-5 p-5">LOGIN TO E-FIT</span>
        </div>

        <div
          class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5"
        >
          <form style="width: 23rem" onsubmit="return adminvalidation()" method="POST" action="/userLoginAction">
            <h3 class="fw-normal mb-5 pb-5" style="letter-spacing: 1px">
              Log in
            </h3>

            <div class="form-outline mb-4">
              <label class="form-label" for="form2Example18">User Name</label>
              <input
                type="text"
                name="adminusername"
                id="adminusername"
                class="form-control form-control-lg"
              />

              <span id="adminusernameerror" class="text-danger"></span>
            </div>

            <div class="form-outline mb-4">
              <label class="form-label" for="form2Example28">Password</label>
              <input
                type="password"
                name="adminpassword"
                id="adminpassword"
                class="form-control form-control-lg"
              />
              <span id="adminpassworderror" class="text-danger"></span>
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit">
                Login
              </button>
              <a href="/showUserSignUpPage" class="btn btn-success btn-lg btn block">SIGN UP HERE</a>
            </div>
          </form>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img
          src="https://i.pinimg.com/736x/1c/9e/29/1c9e2907f354c4ec2ea575e21cfb2343.jpg"
          alt="Login image"
          class="w-100 vh-100"
          style="object-fit: cover; object-position: left"
        />
      </div>
    </div>
  </div>
</section>

<script>
  function adminvalidation() {
    let username = document.getElementById("adminusername").value.trim();
    let password = document.getElementById("adminpassword").value.trim();
    var flag = 0;
    if (username === "") {
      document.getElementById("adminusernameerror").innerHTML =
        "invalid username";
       flag=1
    }
    else
    {
      document.getElementById("adminusernameerror").innerHTML = "";
    }
    if (password == "") {
      document.getElementById("adminpassworderror").innerHTML = "invalid password";
        flag = 1
    }
    else
    {
      document.getElementById("adminpassworderror").innerHTML = "";
    }
    if(flag == 1)
    {
      return false
    }
  }
</script>
